<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calculator</title>
</head>
<body>
  <div>
    <h1>Calculator</h1>
    <p>To begin with the Calculator</p>
    <form id="calculatorForm">
      <label for="operation">Select Operation:</label>
      <select id="operation" name="operation">
        <option value="add">Addition</option>
        <option value="sub">Subtraction</option>
        <option value="mul">Multiplication</option>
        <option value="div">Division</option>
      </select><br><br>
      <label for="n1">Number 1:</label>
      <input type="number" id="n1" name="n1" required><br><br>
      <label for="n2">Number 2:</label>
      <input type="number" id="n2" name="n2" required><br><br>
      <button type="submit">Calculate</button>
    </form>
  </div>

  <script>
    document.getElementById('calculatorForm').addEventListener('submit', function(event) {
      event.preventDefault();
      const operation = document.getElementById('operation').value;
      const n1 = document.getElementById('n1').value;
      const n2 = document.getElementById('n2').value;
      const url = `/${operation}?n1=${n1}&n2=${n2}`;
      window.location.href = url;
    });
  </script>
</body>
</html>
